<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/emptybox"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/foodTextId"
        android:text="Food Name"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#1d3679"
        android:layout_marginTop="25dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/dateTextid"
        android:text="Date: "
        android:layout_below="@+id/foodTextId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="#1d3679"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/imageId"
        android:src="@drawable/cal_counter_listrow"
        android:layout_below="@+id/dateTextid"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/caloriesId"
        android:text="300"
        android:textSize="27sp"
        android:layout_below="@+id/imageId"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#000303"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/caloriesId"
        android:text=" cal"
        android:textStyle="bold"
        android:textColor="#000303"
        android:layout_toRightOf="@id/caloriesId"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/hasChildId"
        android:text=">"
        android:textStyle="bold"
        android:textColor="#000303"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textSize="35sp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />

</RelativeLayout>