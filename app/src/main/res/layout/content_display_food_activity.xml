<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#47b721"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="myAndroid.calcounter.displaywishes.DisplayWishesActivity"
    tools:showIn="@layout/activity_display_food_activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linearLayoutId"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:padding="10dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/totalFoodCaloriesTxtVwId"
            android:text="@string/total_calories"
            android:textSize="15sp"
            android:textColor="#a73e1b"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="|"
            android:textColor="#0b0b0b"
            android:textSize="25sp"
            android:paddingLeft="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/totalFoodItemsTxtVwId"
            android:text="@string/total_food_items"
            android:textSize="15sp"
            android:textColor="#a73e1b"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:id="@+id/listViewId"
        android:layout_below="@+id/linearLayoutId"
        android:layout_marginTop="3dp"
        android:divider="#0b0b0b"
        android:dividerHeight="0.2dp"
        android:layout_marginBottom="4dp"
        android:layout_height="wrap_content"></ListView>

</RelativeLayout>
